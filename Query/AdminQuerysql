-- ▼ AdminPageDAO
-- search 관리자 번호로 관리자 개인정보 조회 / 로그인
SELECT ADMIN_ID, ADMIN_NAME, ADMIN_TEL, ADMIN_BIRTH, ADMIN_EMAIL, GENDER_NUM
FROM ADMIN
WHERE ADMIN_NUM=?;

-- update 관리자 개인정보 수정
UPDATE ADMIN
SET ADMIN_BIRTH=?, ANDIM_EMAIL=?, ADMIN_NAME=?, GENDER_NUM=?, ADMIN_TEL=?
WHERE ADMIN_NUM=?;


--------------------------------------------------------------------------------
-- ▼ AdminMainDAO
-- memberCount 회원수 카운트(총계)
SELECT COUNT(*) AS COUNT
FROM USERS;

-- bookCount 여행책 카운트(총계)
SELECT COUNT(*) AS COUNT
FROM BOOK;

-- newReportList 미처리 신고 리스트 ◆ 뷰 사용해서 조회 UNION ◆
-- ▼ 뷰 조회문 (VIEW_REPORTLIST)
SELECT TYPE, REPORT_NUM, ARTICLE, REPORT_TITLE, REPORTER, REASON, REPORT_DATE, STATUS_NUM, STATUS_DATE
FROM VIEW_REPORTLIST
WHERE STATUS_NUM = 0
ORDER BY REPORT_DATE;

-- newQuestionList 미처리 질문 리스트
SELECT QUESTION_NUM, QCATEGORY_NUM, QUESTION_TITLES, SIGN_NUM, QUESTION_DATE, ANSWER_NUM, ANSWER_DATE
FROM VIEW_QNA
WHERE ANSWER_NUM = 0
ORDER BY QUESTION_DATE;